@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using jobPortal.Models

@model Company
<style>
    body {
        background-color: #EEEEEE; /* Medium grey background */
        color: #2F4F4F; /* Text color */
    }

    h1 {
        color: #212529;
    }

    table {
        width: 90%;
        border-collapse: collapse;
        margin-top: 20px;
        background-color: #F5F5F5; /* Light grey background for the table */
    }

    th, td {
        border: 4px solid DarkGrey;
        padding: 12px;
        text-align: left;
    }

    th {
        background-color: #F0FFFF;
        color: #2F4F4F;
    }

    a {
        text-decoration: none;
        color: #66c2ff;
    }

        a:hover {
            color: #007bb5;
        }

    .action-links {
        white-space: nowrap;
    }

    .btn-edit, .btn-details, .btn-delete {
        display: inline-block;
        padding: 6px 12px;
        margin-bottom: 0;
        font-size: 14px;
        font-weight: 400;
        line-height: 1.42857143;
        text-align: center;
        white-space: nowrap;
        vertical-align: middle;
        cursor: pointer;
        background-image: none;
        border: 1px solid transparent;
        border-radius: 4px;
    }

    .btn-edit {
        background-color: #5bc0de; /* Light blue for edit button */
        border-color: #46b8da;
        color: #fff;
    }

    .btn-details {
        background-color: #5cb85c; /* Green for details button */
        border-color: #4cae4c;
        color: #fff;
    }

    .btn-delete {
        background-color: #d9534f; /* Red for delete button */
        border-color: #d43f3a;
        color: #fff;
    }

        .btn-edit:hover, .btn-details:hover, .btn-delete:hover {
            background-color: #555; /* Dark grey on hover */
        }
</style>

<h1>Index</h1>

<p>
    <a asp-action="SignUp" class="btn btn-primary">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Company Name
            </th>
            <th>
               Company Email
            </th>
            <th>
                Photo
            </th>

            <th>
                Description 
            </th>

        </tr>
    </thead>
    <tbody>

        <tr>
            <td>
                @Html.DisplayFor(modelItem => Model.CompanyName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => Model.CompanyEmail)
            </td>
            <td>
                @Html.DisplayFor(modelItem => Model.CompanyPhoto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => Model.CompanyDescription)
            </td>
           
            <td class="action-links" style="border:0px; background-color:none">
                <a asp-action="Edit" asp-route-id="@Model.CompanyId" class="btn btn-edit">Edit</a>
                <a asp-action="Details" asp-route-id="@Model.CompanyId" class="btn btn-details">Details</a>
                <a asp-action="Delete" asp-route-id="@Model.CompanyId" class="btn btn-delete">Delete</a>
                <i class="bi bi-arrow-right-circle"></i>

            </td>
        </tr>

    </tbody>
</table>

