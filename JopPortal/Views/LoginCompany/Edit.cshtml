@model Company
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        background-color: #C0C0C0; 
    }

    .card {
        max-width: 600px;
        margin: 40px auto;
        padding: 20px;
        background-color: #F0FFF0;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .form-group {
        margin-bottom: 20px;
    }

    label {
        font-weight: bold;
    }

    .text-danger {
        color: red;
    }

    /* Dark red button */
    .btn-primary {
        background-color: #8b0000; /* Dark red */
        border-color: #8b0000;
    }

    /* Increase the size of hr */
    hr {
        height: 15px;
        background-color: #008080; /* Dark red */
        border: none;
        margin: 25px 0;
    }

    /* Add more custom styles as needed */
</style>

<h1>Edit Company</h1>
<hr />
<div class="card">
    <form asp-action="Edit" asp-controller="LoginCompany" method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="CompanyId" />

        <div class="form-group">
            <label asp-for="CompanyName" class="control-label"></label>
            <input asp-for="CompanyName" class="form-control" />
            <span asp-validation-for="CompanyName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="CompanyEmail" class="control-label"></label>
            <input asp-for="CompanyEmail" class="form-control" />
            <span asp-validation-for="CompanyEmail" class="text-danger"></span>
        </div>

        

        <div class="form-group">
            <label asp-for="CompanyPassword" class="control-label">Current Password</label>
            <input asp-for="CompanyPassword" class="form-control" type="password" />
            <span asp-validation-for="CompanyPassword" class="text-danger"></span>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        </div>
        <div class="form-group">
            <label for="NewPassword" class="control-label">New Password</label>
            <input type="password" id="NewPassword" name="NewPassword" class="form-control" />
            
        </div>

        <div class="form-group">
            <label for="ConfirmPassword" class="control-label">Confirm Password</label>
            <input type="password" id="ConfirmPassword" name="ConfirmPassword" class="form-control" />
        </div>
        @if (ViewBag.Confirm != null)
        {
            <span class="text-danger">@ViewBag.Confirm</span>
        }
        <div class="form-group">
            <label asp-for="CompanyDescription" class="control-label"></label>
            <input asp-for="CompanyDescription" class="form-control" type="text" />
            <span asp-validation-for="CompanyDescription" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="CompanyPhoto" class="control-label"></label>
            <input asp-for="CompanyPhoto" class="form-control" type="file" />
            <span asp-validation-for="CompanyPhoto" class="text-danger"></span>
        </div>


        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-primary" />
        </div>
    </form>
</div>

<div>
    <a asp-action="Index" asp-controller="Company">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
